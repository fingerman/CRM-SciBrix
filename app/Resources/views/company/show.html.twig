{% extends 'base.html.twig' %}

{% block body %}
<div class="row">
    <div class="col-md-10">
        <h1>Company</h1>
    </div>
    {%  if is_granted('ROLE_ADMIN') %}
    <div class="col-md-1">
        <div class="col-md-offset-3">
            {{ form_start(delete_form) }}
            <button type="submit" class="btn btn-danger">Delete</button>
            {{ form_end(delete_form) }}
        </div>
    </div>
    {% endif %}
</div>
    <table class="table table-hover" align="center" style="max-width: 700px;">
        <tbody>
        <col width="250">
            <tr>
                <th>Id</th>
                <td>{{ company.id }}</td>
            </tr>
            <tr>
                <th>Company Name</th>
                <td>{{ company.companyName }}</td>
            </tr>
            <tr>
                <th>Segment</th>
                <td>{{ company.segment }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ company.companyAddress }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ company.country }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ company.companyPhone }}</td>
            </tr>
            <tr>
                <th>Company Email</th>
                <td>{{ company.companyEmail }}</td>
            </tr>
            <tr>
                <th>already contacted ? </th>
                <td>{{ company.contacted }}</td>
            </tr>
            <tr>
                <th>Interested In</th>
                <td>{{ company.interestedIn }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ company.amount }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ company.price }}</td>
            </tr>
            <tr>
                <th>has bought?</th>
                <td>{{ company.hasBought }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ company.description }}</td>
            </tr>
        </tbody>
    </table>

<div class="col-md-2 col-md-offset-4">
            <a class="btn btn-default" href="{{ path('company_index') }}" role="button">Back to the list</a>
</div>
<div class="col-md-6">
            <a class="btn btn-primary" href="{{ path('company_edit', { 'id': company.id }) }}">Edit</a>
</div>
{% endblock %}
