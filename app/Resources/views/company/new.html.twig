{% extends 'base.html.twig' %}

{% block body %}
<div class="row">
    <div class="col-md-10">
        <h1>Company create</h1>
    </div>
</div>



    {{ form_start(form, {'attr': {'class': 'form-horizontal'} }) }}
    <div class="form-group">
        <label class="col-md-4 control-label">Company Name</label>
        <div class="col-md-5">
            {{ form_widget(form.companyName, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-4 control-label">Segment</label>
        <div class="col-md-5">
            {{ form_widget(form.segment, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-4 control-label">Company Address</label>
        <div class="col-md-5">
            {{ form_widget(form.companyAddress, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-4 control-label">Country</label>
        <div class="col-md-5">
            {{ form_widget(form.country, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-4 control-label">Phone</label>
        <div class="col-md-5">
            {{ form_widget(form.companyPhone, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-4 control-label">Email</label>
        <div class="col-md-5">
            {{ form_widget(form.companyEmail, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-4 control-label">already Contacted ?</label>
        <div class="col-md-5">
            {{ form_widget(form.contacted, {'attr': {'class': 'checkbox'}}) }}
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-4 control-label">Interested in</label>
        <div class="col-md-5">
            {{ form_widget(form.interestedIn, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-4 control-label">Amount</label>
        <div class="col-md-5">
            {{ form_widget(form.amount, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-4 control-label">Price</label>
        <div class="col-md-5">
            {{ form_widget(form.price, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-4 control-label">has bought ?</label>
        <div class="col-md-5">
            {{ form_widget(form.hasBought, {'attr': {'class': 'checkbox'}}) }}
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-4 control-label">Description</label>
        <div class="col-md-5">
            {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-5 col-md-1">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>

        <div class="col-md-1">
            <a class="btn btn-default" href="{{ path('company_index') }}" role="button">Back to the list</a>
        </div>
    </div>
    {{ form_end(form) }}


{% endblock %}

