{% extends 'base.html.twig' %}

{% block body %}
    <h1>Suppliers list</h1>
    <br>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Company</th>
                <th>Segment</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for supplier in suppliers %}
            <tr>
                <td>{{ supplier.name }}</td>
                <td>{{ supplier.company.getcompanyName }}</td>
                <td>{{ supplier.segment }}</td>
                <td>{{ supplier.email }}</td>
                <td>{{ supplier.phone }}</td>
                <td>
                            <a href="{{ path('supplier_show', { 'id': supplier.id }) }}" type="button" class="btn btn-info" aria-label="Center Align">Show</a>
                            <a href="{{ path('supplier_edit', { 'id': supplier.id }) }}" type="button" class="btn btn-info" aria-label="Center Align">Edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
            <a class="btn btn-primary" href="{{ path('supplier_new') }}">Add</a>
{% endblock %}
