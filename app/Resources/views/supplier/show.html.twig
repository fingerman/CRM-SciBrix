{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-10">
            <h1>Supplier</h1>
        </div>
        <div class="col-md-1">
            <div class="col-md-offset-3">
                {{ form_start(delete_form) }}
                <button type="submit" class="btn btn-danger">Delete</button>
                {{ form_end(delete_form) }}
            </div>
        </div>
    </div>

    <table class="table table-hover" align="center" style="max-width: 700px;">
        <tbody>
        <col width="250">
        <tr>
            <th>Id</th>
            <td>{{ supplier.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ supplier.name }}</td>
        </tr>
        <tr>
            <th>Segment</th>
            <td>{{ supplier.segment }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ supplier.email }}</td>
        </tr>
        <tr>
            <th>Phone</th>
            <td>{{ supplier.phone }}</td>
        </tr>
        <tr>
            <th>Address</th>
            <td>{{ supplier.address }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ supplier.description }}</td>
        </tr>
        <tr>
            <th>Company</th>
            <td>{{ supplier.company.getCompanyName }}</td>
        </tr>
        </tbody>
    </table>
    <div class="col-md-2 col-md-offset-4">

        <a class="btn btn-default" href="{{ path('supplier_index') }}" role="button">Back to the list</a>
    </div>
    <div class="col-md-6">
        <a class="btn btn-primary" href="{{ path('supplier_edit', { 'id': supplier.id }) }}" role="button">Edit</a>
    </div>
{% endblock %}
