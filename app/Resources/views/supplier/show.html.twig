{% extends 'base.html.twig' %}

{% block body %}
    <h1>Supplier</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ supplier.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ supplier.name }}</td>
            </tr>
            <tr>
                <th>Surname</th>
                <td>{{ supplier.surname }}</td>
            </tr>
            <tr>
                <th>Segment</th>
                <td>{{ supplier.segment }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ supplier.email }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ supplier.phone }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ supplier.address }}</td>
            </tr>
            <tr>
                <th>Company</th>
                <td>{{ supplier.company }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ supplier.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('supplier_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('supplier_edit', { 'id': supplier.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
