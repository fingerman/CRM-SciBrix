{% extends 'base.html.twig' %}

{% block body %}
<div class="row">
    <div class="col-md-10">
        <h1>New Supplier</h1>
    </div>
</div>

    {{ form_start(form, {'attr': {'class': 'form-horizontal'} }) }}
    <div class="form-group">
        <label class="col-md-4 control-label">Supplier Name</label>
        <div class="col-md-5">
            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-4 control-label">Supplier Company</label>
        <div class="col-md-5">
            {{ form_widget(form.company, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-4 control-label">Segment</label>
        <div class="col-md-5">
            {{ form_widget(form.segment, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-4 control-label">Email</label>
        <div class="col-md-5">
            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-4 control-label">Phone</label>
        <div class="col-md-5">
            {{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-4 control-label">Address</label>
        <div class="col-md-5">
            {{ form_widget(form.address, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-4 control-label">Description</label>
        <div class="col-md-5">
            {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-5 col-md-1">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>

        <div class="col-md-1">
            <a class="btn btn-default" href="{{ path('supplier_index') }}" role="button">Back to the list</a>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}