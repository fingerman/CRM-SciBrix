{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-10">
            <h1>Product</h1>
        </div>
        <div class="col-md-1">
            <div class="col-md-offset-3">
                {{ form_start(delete_form) }}
                <button type="submit" class="btn btn-danger">Delete</button>
                {{ form_end(delete_form) }}
            </div>
        </div>
    </div>


    <table class="table table-hover" align="center" style="max-width: 700px;">
        <tbody>
        <col width="250">
        <tr>
            <th>Id</th>
            <td>{{ product.id }}</td>
        </tr>
        <tr>
            <th>Segment</th>
            <td>{{ product.segment }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ product.name }}</td>
        </tr>
        <tr>
            <th>Production Price</th>
            <td>{{ product.productionPrice }}</td>
        </tr>
        <tr>
            <th>Sell Price</th>
            <td>{{ product.sellPrice }}</td>
        </tr>
        <tr>
            <th>Sold to</th>
            <td>{{ product.soldTo }}</td>
        </tr>
        <tr>
            <th>Count</th>
            <td>{{ product.count }}</td>
        </tr>
        <tr>
            <th>Note</th>
            <td>{{ product.note }}</td>
        </tr>
        </tbody>
    </table>
    <div class="col-md-2 col-md-offset-4">
        <a class="btn btn-default" href="{{ path('product_index') }}" role="button">Back to the list</a>
    </div>
    <div class="col-md-6">
        <a class="btn btn-primary" href="{{ path('product_edit', { 'id': product.id }) }}" role="button">Edit</a>
    </div>

{% endblock %}
