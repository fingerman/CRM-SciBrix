{% extends 'base.html.twig' %}

{% block body %}
    <h1>Products list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Segment</th>
                <th>Name</th>
                <th>Productionprice</th>
                <th>Sellprice</th>
                <th>Soldto</th>
                <th>Count</th>
                <th>Note</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td><a href="{{ path('product_show', { 'id': product.id }) }}">{{ product.id }}</a></td>
                <td>{{ product.segment }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.productionPrice }}</td>
                <td>{{ product.sellPrice }}</td>
                <td>{{ product.soldTo }}</td>
                <td>{{ product.count }}</td>
                <td>{{ product.note }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('product_show', { 'id': product.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('product_edit', { 'id': product.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('product_new') }}">Create a new product</a>
        </li>
    </ul>
{% endblock %}
