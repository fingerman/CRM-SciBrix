{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-10">
            <h1>Customer</h1>
        </div>
        {%  if is_granted('ROLE_ADMIN') %}
            <div class="col-md-1">
            <div class="col-md-offset-3">
                {{ form_start(delete_form) }}
                <button type="submit" class="btn btn-danger">Delete</button>
                {{ form_end(delete_form) }}
            </div>
        </div>
        {% endif %}
    </div>

    <table class="table table-hover" align="center" style="max-width: 700px;">
        <tbody>
        <col width="250">
            <tr>
                <th>Id</th>
                <td>{{ customer.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ customer.name }}</td>
            </tr>
            <tr>
                <th>Surname</th>
                <td>{{ customer.surname }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ customer.email }}</td>
            </tr>
            <tr>
                <th>Phone (business)</th>
                <td>{{ customer.phoneBusiness }}</td>
            </tr>
            <tr>
                <th>Phone (private)</th>
                <td>{{ customer.phonePrivate }}</td>
            </tr>
            <tr>
                <th>Company</th>
                <td>{{ customer.company.companyname }}</td>
            </tr>
            <tr>
                <th>Department</th>
                <td>{{ customer.department }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ customer.address }}</td>
            </tr>
            <tr>
                <th>Interested in</th>
                <td>{{ customer.interestedIn }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ customer.note }}</td>
            </tr>
        </tbody>
    </table>
<div class="col-md-2 col-md-offset-4">
            <a class="btn btn-default" href="{{ path('customer_index') }}" role="button" >Back to the list</a>
</div>
<div class="col-md-6">
            <a class="btn btn-primary" href="{{ path('customer_edit', { 'id': customer.id }) }}" role="button" >Edit</a>
</div>
{% endblock %}
